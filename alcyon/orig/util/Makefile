include ../Makefile.common
include ../Makefile.silent

PROGRAMS = size68$(EXEEXT) nm68$(EXEEXT)
LIBS = ${LIBC}

all: $(PROGRAMS)

include SRCFILES

size68$(EXEEXT): $(SIZE_OBJS) ${MAKEFILE}
	$(AM_V_LD)$(LD) $(LDFLAGS) -o $@ $(CRT0) $(SIZE_OBJS) \
		$(LIBSRC)nofloat.o \
		$(LIBSRC)fopen.o \
		$(LIBSRC)getl.o \
		$(LIBSRC)getw.o \
